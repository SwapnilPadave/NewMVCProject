@model List<EFDBFirstExample.Models.Brand>
@{
    ViewBag.Title = "Brands";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Brands</h2>
<a href="/brands/create">Create New Brand</a>
<form class="form-inline" action="/Brands/index">
    <label for="Search">Search</label>
    <input type="search" class="form-control" id="search" name="search" placeholder="Search by Brand Name" value="@ViewBag.search" />
    <button type="submit" class="btn btn-primary">Go</button>
</form>
<table class="table">
    <tr>
        <th>Brand Id</th>
        <th>Brand Name</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BrandID</td>
            <td>@item.BrandName</td>
        </tr>
    }
</table>
